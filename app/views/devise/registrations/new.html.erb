<div class='row mt-12 text-left'>
  <div class='offset-md-3 col-md-6 mb-4'>
    <div class='card bg-red'>
      <div class='card-body'>
        <div class='text-center'>
          <%= image_tag 'TheRandomGames', width:'150px' %>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class='row field'>
            <div class="md-form col-md-6 col-sm-12">
              <i class='fas fa-user prefix grey-text'></i>
              <%= f.label :nombre, class:'pl-3' %><br />
              <%= f.text_field :name, autofocus: true %>
            </div>

            <div class="md-form col-md-6 col-sm-12">
              <%= f.label :apellido %><br />
              <%= f.text_field :last_name %>
            </div>
          </div>

          <div class="field md-form">
            <i class='fas fa-grimace prefix grey-text'></i>
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar, class:'pl-5' %>
          </div>
          
          <div class="field md-form">
            <i class='fas fa-envelope prefix grey-text'></i>
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email" %>
          </div>

          <div class="field md-form">
            <i class='fas fa-lock prefix grey-text'></i>
            <%= f.label :contraseña %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field md-form">
            <i class='fas fa-lock prefix grey-text'></i>
            <%= f.label :confirmar_contraseña %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "Sign up", class:'btn btn-deep-orange waves-effect waves-light' %>
          </div>
        <% end %>
        <div class="actions text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>