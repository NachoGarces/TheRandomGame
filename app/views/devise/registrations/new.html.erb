<div class='row'>
  <div class='col m8 l6 offset-l3 offset-m2'>
    <div class='card blue-grey darken-1'>
      <div class='card-body center'>
        <div class='center'>
          <%= image_tag 'TheRandomGames.png', width:'150px' %>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class='row'>
            <div class="input-field col s6">
              <i class='fas fa-user prefix grey-text'></i>
              <%= f.label :nombre, class:'pl-3' %>
              <%= f.text_field :name, autofocus: true, type:"text", class:"validate" %>
            </div>

            <div class="input-field col s6">
              <%= f.label :apellido %>
              <%= f.text_field :last_name, type:"text", class:"validate" %>
            </div>

            <div class="field input-field col s12">
              <i class='fas fa-grimace prefix grey-text'></i>
              <%= f.label :link_avatar %>
              <%= f.text_field :avatar, placeholder:"Pega el link de tu avatar" %>
            </div>
            
            <div class="field input-field col s12">
              <i class='fas fa-envelope prefix grey-text'></i>
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", id:"email", class:"validate" %>
            </div>

            <div class="field input-field col s6">
              <i class='fas fa-lock prefix grey-text'></i>
              <%= f.label :contraseña %>
              <%= f.password_field :password, autocomplete: "new-password", type:"password", class:"validate" %>
            </div>

            <div class="field input-field col s6">
              <%= f.label :confirmar_contraseña %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", class:"validate" %>
            </div>

            <div class="actions text-center">
              <%= f.submit "Sign up", class:'btn btn-deep-orange waves-effect waves-light blue-grey lighten-1' %>
            </div>
          </div>
        <% end %>
        <div class='row'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>