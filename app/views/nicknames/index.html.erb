<div class='row mt-12 text-left'>
  <div class='offset-md-3 col-md-6 mb-4'>
    <div class='card bg-red'>
      <div class='card-body'>
        <p id="notice"><%= notice %></p>

        <h1>Nicknames</h1>

        <table>
          <thead>
            <tr>
              <th>Nick</th>
              <th>Player</th>
              <th>Site</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @nicknames.each do |nickname| %>
              <tr>
                <td><%= nickname.nick %></td>
                <td><%= nickname.player.name %></td>
                <td><%= nickname.site.namesite %></td>
                <td><%= link_to 'Show', nickname %></td>
                <td><%= link_to 'Edit', edit_nickname_path(nickname) %></td>
                <td><%= link_to 'Destroy', nickname, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Nickname', new_nickname_path %>
      </div>
    </div>
  </div>
</div>