<div class='row'>
  <div class='col m8 l6 offset-l3 offset-m2'>
    <div class='card blue-grey darken-1'>
      <div class='card-body'>
        <div class='center'>
          <%= image_tag 'TheRandomGames.png', width:'150px' %>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-field col s12">
            <i class='fas fa-envelope prefix grey-text'></i>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="input-field col s12">
            <i class='fas fa-lock prefix grey-text'></i>
            <%= f.label :contraseÃ±a %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="col s12">
              <%= f.check_box :remember_me, id:'check', checked:"checked" %>
              <%= f.label :volvere!, for:'check' %>
            </div>
          <% end -%>

          <div class="actions center">
            <%= f.submit "Log in", class:'btn btn-dark-green waves-effect waves-light blue-grey lighten-1' %>
          </div>
        <% end %>
        <div class='row'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>